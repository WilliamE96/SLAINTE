<h1>Create a Post</h1>

<%= simple_form_for(@post) do |f| %>
  <%= f.input :content, label: 'Content' %>
  <%= f.input :image_url, as: :file %>
  <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
  <%= f.submit 'Create Post', class: 'btn btn-primary' %>
<% end %>


<%= render 'shared/footer' %>
